    "def remove_categories(row):\n",
    "    row = row.replace('[','').replace(']','').replace(\"'\",'').split(', ')\n",
    "    if len(row) == 1:\n",
    "        return row\n",
    "    elif len(row) == 2 and 'Food' in row and 'Restaurants' in row:\n",
    "        return row\n",
    "    else:\n",
    "        row = [x for x in row if x not in ['Food','Restaurants']]\n",
    "    return row"
   ]
